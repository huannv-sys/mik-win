@model mikk_mmc_web.Controllers.ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h1 class="display-4 mb-3">Đã xảy ra lỗi</h1>
                    <h3 class="mb-4">Xin lỗi, đã có lỗi xảy ra trong quá trình xử lý yêu cầu của bạn.</h3>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mb-4">
                            <strong>Mã yêu cầu:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
