@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container main-dashboard">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-router"></i> Thông tin Router</h5>
                    <span class="text-muted small">Cập nhật lần cuối: @Model.LastUpdated.ToString("HH:mm:ss dd/MM/yyyy")</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6 class="border-bottom pb-2 mb-3">Thông tin cơ bản</h6>
                            <div class="status-item">
                                <div class="status-label">Tên Router:</div>
                                <div class="status-value">@Model.RouterInfo.RouterName</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Model:</div>
                                <div class="status-value">@Model.RouterInfo.Model</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Số Serial:</div>
                                <div class="status-value">@Model.RouterInfo.SerialNumber</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Phiên bản:</div>
                                <div class="status-value">@Model.RouterInfo.FirmwareVersion</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Thời gian hoạt động:</div>
                                <div class="status-value">
                                    <span id="uptime" data-uptime="@Model.RouterInfo.Uptime"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6 class="border-bottom pb-2 mb-3">Tài nguyên hệ thống</h6>
                            <div class="status-item">
                                <div class="status-label">CPU:</div>
                                <div class="status-value">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar" style="width: @Model.SystemResources.CpuLoad%;" 
                                            aria-valuenow="@Model.SystemResources.CpuLoad" aria-valuemin="0" aria-valuemax="100">
                                            @Model.SystemResources.CpuLoad.ToString("0.0")%
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Bộ nhớ:</div>
                                <div class="status-value">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar" style="width: @Model.SystemResources.MemoryPercentage%;" 
                                            aria-valuenow="@Model.SystemResources.MemoryPercentage" aria-valuemin="0" aria-valuemax="100">
                                            @Model.SystemResources.MemoryPercentage.ToString("0.0")%
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        <span id="memory-used" data-bytes="@Model.SystemResources.MemoryUsed"></span> / 
                                        <span id="memory-total" data-bytes="@Model.SystemResources.MemoryTotal"></span>
                                    </small>
                                </div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Ổ đĩa:</div>
                                <div class="status-value">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar" role="progressbar" style="width: @Model.SystemResources.HddPercentage%;" 
                                            aria-valuenow="@Model.SystemResources.HddPercentage" aria-valuemin="0" aria-valuemax="100">
                                            @Model.SystemResources.HddPercentage.ToString("0.0")%
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        <span id="hdd-used" data-bytes="@Model.SystemResources.HddUsed"></span> / 
                                        <span id="hdd-total" data-bytes="@Model.SystemResources.HddTotal"></span>
                                    </small>
                                </div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Nhiệt độ:</div>
                                <div class="status-value">@Model.SystemResources.Temperature °C</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6 class="border-bottom pb-2 mb-3">Kết nối mạng</h6>
                            <div class="status-item">
                                <div class="status-label">Địa chỉ IP:</div>
                                <div class="status-value">@Model.RouterInfo.IpAddress</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Địa chỉ MAC:</div>
                                <div class="status-value">@Model.RouterInfo.MacAddress</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">License:</div>
                                <div class="status-value">Level @Model.RouterInfo.LicenseLevel</div>
                            </div>
                            <div class="status-item">
                                <div class="status-label">Cập nhật:</div>
                                <div class="status-value">
                                    @if (Model.SystemResources.UpdateAvailable)
                                    {
                                        <span class="badge bg-warning">Có bản cập nhật mới</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Phiên bản mới nhất</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-ethernet"></i> Giao diện mạng</h5>
                    <a href="@Url.Action("Index", "Interface")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Trạng thái</th>
                                    <th>Địa chỉ IP</th>
                                    <th>Tốc độ RX/TX</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var iface in Model.TopInterfaces)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Details", "Interface", new { name = iface.Name })">
                                                @iface.Name
                                            </a>
                                        </td>
                                        <td>
                                            @if (iface.IsActive)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Không hoạt động</span>
                                            }
                                        </td>
                                        <td>@iface.IpAddress</td>
                                        <td>
                                            <span class="rx-rate" data-bytes="@iface.RxRate"></span> / 
                                            <span class="tx-rate" data-bytes="@iface.TxRate"></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Luật tường lửa gần đây</h5>
                    <a href="@Url.Action("Index", "Firewall")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Chain</th>
                                    <th>Action</th>
                                    <th>Src/Dst Address</th>
                                    <th>Lần cuối</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rule in Model.RecentRules)
                                {
                                    <tr class="@(rule.Action == "accept" ? "rule-row-accept" : "rule-row-drop")">
                                        <td>@rule.Chain</td>
                                        <td>
                                            @if (rule.Action == "accept")
                                            {
                                                <span class="badge bg-success">@rule.Action</span>
                                            }
                                            else if (rule.Action == "drop")
                                            {
                                                <span class="badge bg-danger">@rule.Action</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@rule.Action</span>
                                            }
                                        </td>
                                        <td>@rule.SrcAddress → @rule.DstAddress</td>
                                        <td>
                                            @if (rule.LastHit != DateTime.MinValue)
                                            {
                                                <span class="text-muted small">@rule.LastHit.ToString("HH:mm:ss dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Chưa</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> DHCP Leases</h5>
                    <a href="@Url.Action("Index", "Dhcp")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Địa chỉ</th>
                                    <th>MAC</th>
                                    <th>Host</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lease in Model.RecentLeases)
                                {
                                    <tr class="@(lease.Active ? "lease-active" : "lease-expired")">
                                        <td>@lease.Address</td>
                                        <td>@lease.MacAddress</td>
                                        <td>@lease.HostName</td>
                                        <td>
                                            @if (lease.Blocked)
                                            {
                                                <span class="badge bg-danger">Bị chặn</span>
                                            }
                                            else if (lease.Active)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Hết hạn</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal-text"></i> Nhật ký gần đây</h5>
                    <a href="@Url.Action("Index", "Log")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Thời gian</th>
                                    <th>Chủ đề</th>
                                    <th>Thông báo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.RecentLogs)
                                {
                                    <tr class="@("log-" + log.LogLevel)">
                                        <td>@log.Time.ToString("HH:mm:ss")</td>
                                        <td>
                                            <span class="badge bg-secondary">@log.Topic</span>
                                        </td>
                                        <td>@log.Message</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Format các giá trị
            function updateFormattedValues() {
                // Format uptime
                var uptimeSeconds = parseInt($('#uptime').data('uptime'));
                $('#uptime').text(formatUptime(uptimeSeconds));
                
                // Format memory values
                var memoryUsed = parseInt($('#memory-used').data('bytes'));
                var memoryTotal = parseInt($('#memory-total').data('bytes'));
                $('#memory-used').text(formatBytes(memoryUsed, 1));
                $('#memory-total').text(formatBytes(memoryTotal, 1));
                
                // Format hdd values
                var hddUsed = parseInt($('#hdd-used').data('bytes'));
                var hddTotal = parseInt($('#hdd-total').data('bytes'));
                $('#hdd-used').text(formatBytes(hddUsed, 1));
                $('#hdd-total').text(formatBytes(hddTotal, 1));
                
                // Format interface rates
                $('.rx-rate').each(function() {
                    var bytes = parseInt($(this).data('bytes'));
                    $(this).text(formatBytes(bytes, 0) + '/s');
                });
                
                $('.tx-rate').each(function() {
                    var bytes = parseInt($(this).data('bytes'));
                    $(this).text(formatBytes(bytes, 0) + '/s');
                });
            }
            
            // Cập nhật các giá trị ngay khi trang tải xong
            updateFormattedValues();
            
            // Cập nhật dữ liệu Dashboard mỗi 30 giây
            function refreshDashboard() {
                $.ajax({
                    url: '/api/router/info',
                    method: 'GET',
                    success: function(data) {
                        console.log('Dashboard refreshed');
                        // Trong môi trường thực tế, cập nhật các giá trị từ dữ liệu mới
                    },
                    error: function(error) {
                        console.error('Error refreshing dashboard', error);
                    }
                });
            }
            
            // Thiết lập interval để cập nhật dữ liệu
            // setInterval(refreshDashboard, 30000);
        });
    </script>
}
