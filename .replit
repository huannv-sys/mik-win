run = "bash run_web_app.sh"
language = "dotnet"
modules = ["dotnet-8.0"]

[nix]
channel = "stable-23_11"

[env]
DOTNET_ROOT = "/home/runner/${REPL_SLUG}/.config/dotnet"
PATH = "${DOTNET_ROOT}:${PATH}"
ASPNETCORE_ENVIRONMENT = "Development"

[deployment]
build = ["sh", "-c", "cd mikk-mmc-web && dotnet publish -c Release -o ../publish"]
run = ["sh", "-c", "cd publish && dotnet mikk-mmc-web.dll --urls=http://0.0.0.0:5000"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App"

[[workflows.workflow]]
name = "Web App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mikk-mmc-web && dotnet run --urls=http://0.0.0.0:5000"
waitForPort = 5000
