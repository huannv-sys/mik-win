modules = ["bash", "dotnet-8.0"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "bash_workflow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Debug and Deploy Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ubuntu Console App"

[[workflows.workflow]]
name = "bash_workflow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash fix_and_deploy.sh"

[[workflows.workflow]]
name = "Debug and Deploy Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash fix_and_deploy.sh"

[[workflows.workflow]]
name = "Ubuntu Console App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash run_ubuntu_app.sh"

[deployment]
run = ["sh", "-c", "bash fix_and_deploy.sh"]
